<% include ../partials/header.ejs %>

  <div class="container">
    <br>
    <h3 class="text-center"><%= title %></h3>
    <div class="row justify-content-center">
        <div class="col-md-offset-3 col-md-6">

        <br>
        <table class="table label-bordered table-striped table-hover">
          <tr>
            <th class="text-center">First Name</th>
            <th class="text-center">Last Name</th>
            <th class="text-center">Age</th>
            <th class="text-center"></th>
            <th class="text-center"></th>
          </tr>

          <% contacts.forEach(contact => { %>
            <tr>
              <td class="text-center"><%= contact.firstName %></td>
              <td class="text-center"><%= contact.lastName %></td>
              <td class="text-center"><%= contact.age %></td>
              
              <td class="text-center">
                <a href="./contact-list/edit/<%= contact._id %>" class="btn btn-primary"><i class="fa fa-edit"  aria-hidden="true"></i> Edit</a>
              </td>

              <td class="text-center">
                  <a href="./contact-list/delete/<%= contact._id %>" class="btn btn-danger"><i class="fa fa-trash-alt"  aria-hidden="true"></i> Delete</a>
                </td>
            </tr>
            <% }); %>
        </table>
        <br>
        <a class="btn btn-primary" href="/contact-list/add" role="button"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Contact</a>
      </div>
    </div>
  </div>


<% include ../partials/footer.ejs %>