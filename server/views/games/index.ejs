<% include ../partials/header.ejs %>

  <div class="container">
    <br>
    <h3 class="text-center">My Favourite Games</h3>
    <div class="row justify-content-center">
      <div class="col-md-10 col-md-offset-1">

        <br>
        <table class="table label-bordered table-striped table-hover">
          <tr>
            <th class="text-center">Game Name</th>
            <th class="text-center">Description</th>
          </tr>

          <% games.forEach(game => { %>
            <tr>
              <td class="text-center"><%= game.gameName %></td>
              <td class=""><%= game.description %></td>
            </tr>
            <% }); %>
        </table>

      </div>
    </div>
  </div>


